<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="es.sergionovic.abspitchtrainer.UI.Register_Activity">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="16dp">

            <TextView
                android:gravity="bottom"
                android:layout_height="156dp"
                android:layout_width="match_parent"
                android:text="Bienvenido a \nAbsPitch Trainer"
                android:textColor="@color/white"
                android:textSize="32sp" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/register_main_content"
            android:layout_below="@+id/app_bar"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/register_title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Vamos a recoger unos datos para comenzar..."
                android:textSize="@dimen/abc_text_size_subhead_material" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_name"
                android:layout_below="@+id/register_title"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent">

                <EditText
                    android:hint="Nombre"
                    android:id="@+id/etRegister_Name"
                    android:inputType="text"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimaryText" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_age"
                android:layout_below="@+id/textinput_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <EditText
                    android:hint="Edad"
                    android:id="@+id/etRegister_Age"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorPrimaryText" />

            </android.support.design.widget.TextInputLayout>

            <Button
                style="?android:attr/button"
                android:background="@drawable/ripple_primary"
                android:clickable="true"
                android:elevation="2dp"
                android:id="@+id/btRegister_Next"
                android:layout_alignEnd="@+id/textinput_age"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/textinput_age"
                android:layout_height="36dp"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Continuar"
                android:textColor="@color/white" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>