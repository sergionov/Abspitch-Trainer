<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wk_ripple"
        android:clickable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/theory_card_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wk_ripple"
            android:clickable="true"
            android:padding="16dp">

            <TextView
                android:id="@+id/theory_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="8dp"
                android:text="Title"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/abc_text_size_title_material" />

            <TextView
                android:id="@+id/theory_card_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/theory_card_title"
                android:text="Subtitle"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/abc_text_size_subhead_material" />

            <TextView
                android:id="@+id/theory_card_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/theory_card_subtitle"
                android:ellipsize="marquee"
                android:lines="3"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="Body"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/abc_text_size_body_1_material" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/theory_card_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wk_ripple"
            android:clickable="true"
            android:padding="8dp">

            <Button
                android:id="@+id/theory_card_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/custom_bg"
                android:clickable="true" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>